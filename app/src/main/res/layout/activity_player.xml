<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/video_title_playeractivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_view"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/title"
        />

    <LinearLayout
        android:id="@+id/views_layout"
        android:layout_marginTop="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/video_title_playeractivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/video_views_playeractivity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/title"
            android:text="ndncfnvndfj" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_below="@id/views_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp">

        <TextView android:id="@+id/video_published_date_playeractivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_playeractivity_layout"
        android:layout_below="@id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp">

        <TextView android:id="@+id/description_playeractivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/title"
            />
    </LinearLayout>
</RelativeLayout>
